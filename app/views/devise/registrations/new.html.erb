<div class="border-form-div">
  <h2>Đăng ký</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label "Họ và tên" %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Ngày sinh" %><br />
      <%= f.date_select :day_of_birth, {order: [:day, :month, :year],
        prompt: { day: 'Ngày', month: 'Tháng', year: 'Năm' },
        start_year: Date.today.year, end_year: Date.today.year - 100}, {required: true} %>
    </div>

    <div class="field">
      <%= f.label "Giới tính" %><br />
      <%= f.select :gender, [%w[Nam Nam], %w[Nữ Nữ]], :prompt => 'Chọn', required: true,
        placeholder: 'Gender' %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Mật khẩu" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label "Nhập lại mật khẩu" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Đăng ký", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
